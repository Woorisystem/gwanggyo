<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="smartparking.poscoict.psj.poscoict_project">

    <!-- Bluetooth 관련 Permission -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Internet 관련 Permission -->
    <uses-permission android:name="android.permission.INTERNET" />


    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 인터넷 State 관련 Permission -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 진동 관련 Permission -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 파일 Storage 관련 Permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />

    <!-- Background Service 구현을 하기 위한 Permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />


    <application
        android:allowBackup="false"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/artboard"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <service
            android:name=".SJ_Service.BeaconService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".SJ_Activity.SplashActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SJ_Activity.LocationActivity"
            android:clearTaskOnLaunch="true"
            android:excludeFromRecents="true"
            android:hardwareAccelerated="false"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".SJ_Activity.LocationActivity_Select"
            android:clearTaskOnLaunch="true"
            android:excludeFromRecents="true"
            android:hardwareAccelerated="false"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".SJ_Activity.RegistCarDialog"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".SJ_Activity.LoginActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".SJ_BroadCast.BroadCastManager"
            android:clearTaskOnLaunch="true"
            android:enabled="true"
            android:exported="true"
            android:launchMode="singleTask" />
        <receiver android:name=".SJ_BroadCast.AppNetWork">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".SJ_BroadCast.ParingStateCheck"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
                <action android:name="android.bluetooth.adapter.action.CONNECTION_STATE_CHANGED" />
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".SJ_Service.SensorService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SJ_Service.BeaconService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SJ_Service.Beacon26Service"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SJ_Service.Beacon26Service_NoDriver"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SJ_Service.BeaconService_NoDriver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>