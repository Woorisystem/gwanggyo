<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_downloadPDF"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/book"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/txt_appVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="1.4.2" />

    </LinearLayout>
    <TextView
        android:id="@+id/txt_downloadPDF"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="매뉴얼 다운로드"
        />

    <ImageView
        android:id="@+id/img_logo_login"
        android:layout_width="280dp"
        android:layout_height="389dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:contentDescription="@string/img_description_main"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/splash_image" />

    <EditText
        android:id="@+id/et_id_login"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="@string/edit_txt_hint_user_id"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColor="@color/colorTheSharpDarkNavyBlue"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/edit_txt_hint_user_password_main"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="@color/colorTheSharpDarkNavyBlue"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorTheSharpDarkGreyBlue"
            android:text="@string/button_txt_login_main"
            android:textColor="@color/colorBackground" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorTheSharpDarkGreyBlue"
            android:text="@string/button_txt_signup_main"
            android:textColor="@color/colorBackground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_remember_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorTheSharpDarkGreyBlue"
            android:checked="true"
            android:text="@string/check_txt_remember_main"
            android:textColor="@color/colorTheSharpDarkNavyBlue"
            android:textSize="10dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_result_login"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:gravity="center_vertical"
        android:text="@string/textview_txt_remember_info_main"
        android:textSize="10dp"
        android:textStyle="bold" />



</LinearLayout>